<Application
    x:Class="Winux.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winux"
    xmlns:viewmodel="using:Winux.ViewModels">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Brushes.xaml"/>
                <ResourceDictionary Source="/Themes/Components.xaml"/>
                <!-- Styles -->
                <ResourceDictionary Source="/Themes/Styles/ContentWindow/Button/WindowButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <viewmodel:MainPageViewModel x:Key="MainPageViewModel"/>
        </ResourceDictionary>
    </Application.Resources>

</Application>